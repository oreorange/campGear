<h1>ギア編集</h1>
<%= form_with model:@gear, local:true do |f| %>
  <h4>名前</h4>
  <%= f.text_field :name %>
  <h4>メーカー</h4>
  <%= f.text_field :maker %>
  <h4>画像</h4>
  <%= f.file_field :image %>
  <h4>紹介</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  
  <%= f.submit '更新' %>
<% end %>
