<div class="main-visual">
  campcamp
</div>

<div class="main">
  <% @gears.each do |gear| %>
    <div class="gear-item">
      <div class="gear-image">
        <%= attachment_image_tag gear, :image, :fill, 300, 300, format: 'jpeg' %>
      </div>
      <div class="gear-text">
          <h4><%= gear.name %></h4>
          <h4><%= gear.maker %></h4>
          <h4><%= gear.introduction %></h4>
          <h4><%= gear.user.name %></h4>
          <% if gear.user_id == current_user.id %>
            <%= link_to "削除", gear_path(gear), method: :delete %>
          <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="pagenation">
  <%= paginate @gears %>
</div>
